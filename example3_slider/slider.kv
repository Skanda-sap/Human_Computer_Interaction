BoxLayout:
    orientation: 'vertical'
    padding: 20

    Label:
        id: slider_value_label
        text: 'Slider Value: 50'

    Slider:
        id: slider
        min: 1
        max: 100
        value: 50
        on_value: slider_value_label.text = 'Slider Value: {}'.format(int(self.value))

    Label:
        text: 'Minimum Value 1'
        size_hint: (None, None)
        size: self.texture_size
    Label:
        text: 'Maximum Value 100'
        size_hint: (None, None)
        size: self.texture_size

    Widget:
